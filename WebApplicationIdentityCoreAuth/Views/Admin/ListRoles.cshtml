@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListRoles";
}

<h1>ListRoles</h1>

@if (Model.Any())
{

    <a class="btn btn-primary mb-3" style="width:auto" asp-controller="Admin" asp-action="CreateRole">Create Role</a>

    foreach (var role in Model)
    {

        <div class="card mb-3">
            <div class="card-header">
                Role Id : @role.Id
            </div>

            <div class="card-body">
                <h5 class="card-title">@role.Name</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <a asp-action="DeleteRole"  asp-route-id="@role.Id" class="btn btn-danger">Delete</a>

            </div>
        </div>

    }

}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created Yet
        </div>

        <div class="card-body">
            <h5 class="card-title">
                Use The Button below to create role
            </h5>

            <a class="btn btn-primary mb-3" style="width:auto" asp-controller="Admin" asp-action="CreateRole">Create Role</a>
        </div>
    </div>

}

